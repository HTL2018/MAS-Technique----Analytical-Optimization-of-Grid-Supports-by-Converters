clear all

n=0:0.05:1;
P=0.6:0.2:1;
Q=sqrt(1-P.^2);

for i=1:3
    for j=1:21
        pBPSC(i,j)=n(j)*sqrt(p(i)^2+Q(i)^2);
        pICPS(i,j)=n(j)*Q(i)/sqrt(1-n(j)^2);
        pPNSC(i,j)=2*n(j)*Q(i)/(1-n(j)^2);
    end
end

plot(0:0.05:1,pBPSC(1,1:21),'LineWidth',3)
hold on
plot(0:0.05:1,pICPS(1,1:21),'LineWidth',3,'r')
hold on
plot(0:0.05:1,pPNSC,'g')

legend('pBPSC','pICPS','pPNSC')
ylim([0 3])


